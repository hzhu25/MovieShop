@model List<ApplicationCore.Models.MovieCardModel>

<div class="container-fluid">
    <div class="row">
        @foreach (var movieCard in Model)
        {
            <div class="col-xl-2 col-sm-4 col-lg-3 col-6">
                <partial name="_MovieCard" model="@movieCard" style="margin-bottom:0" />
                <div class="d-grid">
                    <button type="button" class="btn btn-dark btn-sm" data-bs-toggle="modal" data-bs-target="#PurchaseDetailsModal">Purchase Details</button>

                    <!-- Modal -->
                    <div class="modal fade" id="PurchaseDetailsModal" tabindex="-1" aria-labelledby="PurchaseDetailsModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="PurchaseDetailsModalLabel"> Purchase Details </h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <div class="row">
                                        <div class="col-4">
                                            <img src="@movieCard.PosterUrl" alt="poster" width="200" height="300" />
                                        </div>
                                        <partial name="_PurchaseDetailsPartial" model="@movieCard" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>